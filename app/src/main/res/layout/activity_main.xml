<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.avenwu.imageview.demo.app.MainActivity"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/default_style"/>

    <com.avenwu.imageview.IndexImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/default_style"/>

    <com.avenwu.imageview.IndexImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher"
        app:indexBackground="#259b24"
        app:gradientEnable="false"
        app:indexText="2"
        app:indexFontColor="#fff"/>

    <com.avenwu.imageview.IndexImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/image1"
        android:scaleType="centerCrop"
        app:indexBackground="#ff5722"
        app:gradientEnable="false"
        app:circleBackground="#cddc39"
        app:strokeColor="#259b24"/>

    <com.avenwu.imageview.IndexImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image1"
        android:scaleType="centerCrop"
        app:indexBackground="#ff5722"
        app:gradientEnable="true"
        app:circleBackground="#cddc39"
        app:strokeColor="#259b24"
        app:strokeWidth="5dp"/>
</LinearLayout>
